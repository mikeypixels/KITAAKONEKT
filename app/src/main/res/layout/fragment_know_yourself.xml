<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.KnowYourselfFragment">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightGray"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:background="@color/white">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:backgroundTint="@color/white"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:theme="@style/AppTheme.Toolbar"
                    app:layout_collapseMode="pin"
                    android:id="@+id/tool_bar2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KNOW YOURSELF"
                        android:fontFamily="@font/pt_serif_bold"
                        android:textSize="20sp"
                        android:layout_gravity="center"/>

                </androidx.appcompat.widget.Toolbar>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/toolbar_shadow" />

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Sex vs Gender"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/source_serif_pro_regular"
                        android:id="@+id/sex_vs_gender"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sex_vs_gender"
                        android:layout_marginTop="5dp"
                        android:text="Sex"
                        android:textSize="17sp"
                        android:fontFamily="@font/pt_serif_bold"
                        android:id="@+id/sex_label"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sex_label"
                        android:textSize="16sp"
                        android:text="Is the biological differences between males and females, such as the genitalia and genetic differences."
                        android:fontFamily="@font/pt_serif_regular"
                        android:id="@+id/sex_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sex_content"
                        android:layout_marginTop="8dp"
                        android:text="Gender"
                        android:textSize="17sp"
                        android:fontFamily="@font/pt_serif_bold"
                        android:id="@+id/gender_label"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gender_label"
                        android:textSize="16sp"
                        android:text="refers to the role of a male or female in society, known as a gender role, or an individualâ€™s concept of themselves, or gender identity."
                        android:fontFamily="@font/pt_serif_regular"
                        android:id="@+id/gender_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gender_content"
                        android:layout_marginTop="20dp"
                        android:text="Understand your body"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/source_serif_pro_regular"
                        android:id="@+id/understand_body"/>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/understand_body"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/male"
                        android:id="@+id/male_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/male_icon"
                        android:text="Male"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pt_serif_regular"
                        android:id="@+id/male_details"/>

                    <RelativeLayout
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/male_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/understand_male">

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Puberty"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightblue"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnPuberty"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnPuberty"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="2dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="2dp"
                            android:id="@+id/pubertyLayout">

                            <TextView
                                android:id="@+id/pubertyText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Reproductive organs"
                            android:layout_below="@id/pubertyLayout"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue2"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnReproductiveOrgans"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnReproductiveOrgans"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/reproductiveOrgansLayout">

                            <TextView
                                android:id="@+id/reproductiveOrganText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Semen"
                            android:layout_below="@id/reproductiveOrgansLayout"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnSemen"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnSemen"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/semenLayout">

                            <TextView
                                android:id="@+id/semenText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Sperm"
                            android:layout_below="@id/semenLayout"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue2"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnSperm"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnSperm"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/spermLayout">

                            <TextView
                                android:id="@+id/spermText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Hormones"
                            android:layout_below="@id/spermLayout"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnHormones"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnHormones"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/hormonesLayout">

                            <TextView
                                android:id="@+id/hormonesText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/understand_male"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/female2"
                        android:id="@+id/female_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/female_icon"
                        android:text="Female"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pt_serif_regular"
                        android:id="@+id/female_details"/>

                    <RelativeLayout
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/female_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/understand_female">

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Puberty"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnFemalePuberty"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnFemalePuberty"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/pubertyFemaleLayout">

                            <TextView
                                android:id="@+id/pubertyFemaleText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Reproductive organs"
                            android:layout_below="@id/pubertyFemaleLayout"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue2"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnFemaleReprOrgans"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnFemaleReprOrgans"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/femaleReprOrgansLayout">

                            <TextView
                                android:id="@+id/femaleReprOrganText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Hormones"
                            android:layout_below="@id/femaleReprOrgansLayout"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnFemaleHormones"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnFemaleHormones"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/femaleHormonesLayout">

                            <TextView
                                android:id="@+id/femaleHormonesText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Ovulation"
                            android:layout_below="@id/femaleHormonesLayout"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue2"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnOvulation"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnOvulation"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/ovulationLayout">

                            <TextView
                                android:id="@+id/ovulationText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

                        <Button
                            android:drawableRight="@android:drawable/arrow_down_float"
                            android:text="Menstruation hygiene"
                            android:layout_below="@id/ovulationLayout"
                            android:background="@color/lightBlue"
                            android:backgroundTint="@color/lightBlue"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnMenstruation"/>

                        <com.github.aakira.expandablelayout.ExpandableLinearLayout
                            android:layout_below="@id/btnMenstruation"
                            app:ael_duration = "100"
                            app:ael_expanded = "false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/menstruationLayout">

                            <TextView
                                android:id="@+id/menstruationText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pt_serif_regular"/>

                        </com.github.aakira.expandablelayout.ExpandableLinearLayout>


                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


</FrameLayout>
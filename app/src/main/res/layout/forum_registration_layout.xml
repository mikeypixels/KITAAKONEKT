<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_white_24dp"
        android:id="@+id/back_arrow"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/reg_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reg_heading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/back_arrow"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/reg_head_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reg_heading_below"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:justificationMode="inter_word"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/reg_head"/>

    <LinearLayout
        android:layout_below="@+id/reg_head_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/full_name_card"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="jina kamili"
                android:background="@drawable/edit_text_bg"
                android:scrollHorizontally="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/user_name_card"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="jina mtumiaji"
                android:background="@drawable/edit_text_bg"
                android:scrollHorizontally="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/pass_card"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardElevation="5dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="neno la siri"
                android:scrollHorizontally="true"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/conf_pass_card"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="30dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <EditText
                android:id="@+id/conf_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="hakiki neno la siri"
                android:scrollHorizontally="true"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:cardElevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jiunge"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="50dp"/>

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:id="@+id/login_txt">

                <TextView
                    android:id="@+id/login_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_txt" />

                <TextView
                    android:id="@+id/login_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" bofya hapa"
                    android:textColor="@color/primary"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/help_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_local_hospital_black_24dp"/>

            <TextView
                android:id="@+id/help_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benjamin Mkapa Hospital"
                android:textSize="13sp"
                android:layout_toEndOf="@+id/help_image"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inapatikana Udom Ng'ong'ona"
                android:layout_toEndOf="@+id/help_image"
                android:layout_below="@+id/help_name"
                android:textSize="13sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0712957994"
                android:layout_toEndOf="@+id/help_image"
                android:layout_below="@+id/location"
                android:textSize="13sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/blue"/>

            <ImageView
                android:id="@+id/map_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/map"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
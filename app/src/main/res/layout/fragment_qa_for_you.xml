<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.QAForYouFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/frl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/transparent_gradient_bg"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/qn"
        android:layout_width="135dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ans"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:cardCornerRadius="28dp"
        android:layout_marginStart="25dp"
        app:cardBackgroundColor="@color/orange"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/qn_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/qn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Questions"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ans"
        android:layout_width="135dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/qn"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black"
        app:cardCornerRadius="28dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/ans_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ans_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answers for you"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
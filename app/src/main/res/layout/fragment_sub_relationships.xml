<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".fragments.SubRelationshipsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--                android:background="#FFC0CB"-->

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/relationship3" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Mahusiano"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:fontFamily="@font/pt_serif_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/mahusianoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical"
                app:ael_duration="200"
                app:ael_expanded="false">

                <TextView
                    android:id="@+id/mahusianoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/pt_serif_regular"
                    android:text="@string/relationships" />

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnNBZM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Njia bora za mahusiano"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:fontFamily="@font/pt_serif_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/njiaZaMahusianoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical"
                app:ael_duration="200"
                app:ael_expanded="false">

                <TextView
                    android:id="@+id/njiaZaMahusianoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/pt_serif_regular" />

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnMWW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Mahusiano na wazazi na wazee"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:fontFamily="@font/pt_serif_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/mahusianoWazaziWazeeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical"
                app:ael_duration="200"
                app:ael_expanded="false">

                <TextView
                    android:id="@+id/mahusianoWazaziWazeeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/pt_serif_regular" />

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnMNM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Mahusiano na marafiki"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:fontFamily="@font/pt_serif_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/mahusianoMarafikiLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical"
                app:ael_duration="200"
                app:ael_expanded="false">

                <TextView
                    android:id="@+id/mahusianoMarafikiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/pt_serif_regular" />

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnMYK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Mahusiano ya kimapenzi"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:fontFamily="@font/pt_serif_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/mahusianoKimapenziLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical"
                app:ael_duration="200"
                app:ael_expanded="false">

                <TextView
                    android:id="@+id/mahusianoKimapenziText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/pt_serif_regular" />

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnIZUWANM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="ishara za uhusiano wa afya na mbaya"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:fontFamily="@font/pt_serif_regular"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.github.aakira.expandablelayout.ExpandableLinearLayout
                android:id="@+id/isharaUhusianoAfyaMbayaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                app:ael_duration="200"
                app:ael_expanded="false">

                <TextView
                    android:id="@+id/isharaUhusianoAfyaMbayaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/pt_serif_regular" />

            </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>